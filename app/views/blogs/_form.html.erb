<%= form_for(@blog) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% @blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<!-- this section modified by Kim on 3/15/2016 -->
  <div class="field" style="display: none">
    <%= f.label :Name  %><br>
    <%= f.text_field :title, :value => current_user.username  %>
  </div>
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :content, :cols => 50, :rows => 5 %>
  </div>
  <div class="field" style="display: none;">
    <%= f.label :lugref %>
    <%= f.text_area :lugref, :value => @lugid %>
  </div>
  <div class="actions">
    <%= f.submit "Save Comment" %>
  </div>
<% end %>
